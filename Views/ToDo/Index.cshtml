@using TODO_List_MVC.Models
@model IndexViewModel

<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>Список задач</title>
</head>
<style>
    .textarea1 {
        width: 20%;
        height: 10%;
        resize: none;
    }
</style>
<body>
    <div>
        <h2>Добавить данные</h2>
        <form action="ToDo/Create" method="post">
            <p>
                <label>Номер задачи</label>
                <input type="number" name="Id" />
            </p>
            <p>
                <label>Имя: </label>
                <input type="text" name="Name" />
            </p>
            <p>
                <label>Описание</label>
                <textarea class="textarea1" name="Description"></textarea>
            </p>
            <p>
                <label>Дата</label>
                <input type="date" name="DateTime" />
            </p>
            <p>
                <label>Время</label>
                <input type="time" name="DateTime"/>
            </p>

            <input type="submit" value="Отправить" />
        </form>
    </div>

    <h2>Список задач</h2>


    <table border="1" width="50%">
        <tr>
            <th>Номер задачи</th>
            <th>Имя человека</th>
            <th>Описание задачи</th>
            <th>До какого нужно выполнить</th>
        </tr>
        @foreach (var item in Model.Todo)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.dateTime</td>
            </tr>
        }
    </table>
</body>
